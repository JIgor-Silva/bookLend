<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl">
    <div class="p-8">
      <% flash.each do |key, value| %>
        <div id="alert-message" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%=  value %></span>
          <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
            <svg id="close-alert" class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
          </span>
        </div>
      <% end %>
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-indigo-600 mb-2">Novo Aluguel</h1>
        <p class="text-gray-500">Preencha os detalhes do aluguel</p>
      </div>

      <%= form_for @rental, html: { class: "space-y-6" } do |f| %>
        <%= f.hidden_field :book_id %>

        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700">Data de Devolução</label>
          <div class="flex space-x-2">
            <%= f.date_field :return_date,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border" %>
          </div>
        </div>

        <div class="space-y-2">
          <label class="block text-sm font-medium text-gray-700">CPF do Usuário</label>
          <%= text_field_tag :cpf, nil, 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border",
              placeholder: "000.000.000-00" %>
        </div>
        <div class="pt-4">
          <%= f.submit "Alugar", 
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
        </div>

        <div class="mt-1">
          <%= link_to 'Voltar', books_path, 
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
