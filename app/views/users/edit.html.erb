<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl">
    <div class="p-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-indigo-600 mb-2">Atualizar Dados</h1>
        <p class="text-gray-500">Preencha os detalhes para atualizar o cadastro do cliente</p>
      </div>

      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, class: "space-y-6" do |f| %>
        <% if @user.errors.any? %>
          <div id="alert-message" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <span class="block sm:inline"><%= @user.errors.full_messages.to_sentence %></span>
            <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
              <svg id="close-alert" class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
            </span>
          </div>
        <% end %>

        <div>
          <%= f.label :name, 'Nome', class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border", placeholder: "Digite o nome" %>
        </div>

        <div>
          <%= f.label :email, 'Email', class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border", placeholder: "Digite o email" %>
        </div>

        <div>
          <%= f.label :cpf, 'CPF', class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :cpf, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border", placeholder: "Digite o CPF" %>
        </div>

        <div class="pt-4">
          <%= f.submit 'Atualizar Dados', class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
        </div>
      <% end %>

      <div class="mt-6 flex justify-center text-sm">
        <%= link_to 'Voltar', users_path, class: "text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>
  </div>
</div>
