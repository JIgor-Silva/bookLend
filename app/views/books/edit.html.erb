<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl">
    <div class="p-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-indigo-600 mb-2">Editar Livro</h1>
        <p class="text-gray-500">Preencha os detalhes para editar o livro</p>
      </div>

      <%= form_with(model: @book, local: true, class: "space-y-6") do |form| %>
        <div>
          <%= form.label :title, 'Título', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border" %>
        </div>

        <div>
          <%= form.label :author, 'Autor', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :author, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border" %>
        </div>

        <div>
          <%= form.label :description, 'Descrição', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border", rows: 4 %>
        </div>

        <div>
          <%= form.label :pages, 'Número de Páginas', class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :pages, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border" %>
        </div>

        <div>
          <%= form.label :url_image_cover, 'Link da Capa do Livro', class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :url_image_cover, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm py-2 px-3 border", placeholder: "Cole o novo link da capa aqui", value: @book.url_image_cover %>
          <p class="text-gray-500 text-xs italic">Cole o link da nova imagem da capa do livro.</p>
        </div>

        <div class="pt-4">
          <%= form.submit 'Atualizar Livro', class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
        </div>
      <% end %>

      <div class="mt-6 flex justify-center">
        <%= link_to 'Voltar', books_path, class: "inline-flex items-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition duration-150 ease-in-out" %>
      </div>
    </div>
  </div>
</div>
